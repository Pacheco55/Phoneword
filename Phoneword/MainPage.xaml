<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
         xmlns:mycode="clr-namespace:Phoneword"
         x:Class="Phoneword.MainPage">
    <VerticalStackLayout Spacing="15" Padding="20">
        <Label Text = "Telefono"
               FontSize ="{mycode:GlobalFontSize}"/>
        <Entry x:Name="PhoneNumberText" 
               Placeholder="Telefono AlfaNumerico" 
               Text= "1-55-NETMAUI" />
        <Button x:Name="TraslateButton"
                Text="Traducir" 
                Clicked="OnTranslate" />
        <Button x:Name="CallButton"
                Text="Llamar" 
                Clicked="OnCall" 
                IsEnabled="false" />
        <Label Text ="Creada por Pacheco 55"
               FontSize = "{x:Static Member=mycode:MainPage.MyFontSize}" />



    </VerticalStackLayout>

</ContentPage>